@using BookShopping.Domain.DTOs
@model List<FeatureDto>
<section class="mb--30">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-xl-3 col-md-6 mt--30">
                    <div class="feature-box h-100">
                        <div class="icon">
                            <i class="@(item.Icon)"></i>
                        </div>
                        <div class="text">
                            <h5>@item.Name</h5>
                            <p> @item.Description</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>